{
    "name": "logseq-plugin-toolbar-enhance",
    "description": "Add function buttons to the toolbar",
    "repository": "https://github.com/YU000jp/logseq-plugin-toolbar-enhance.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "logseq-plugin-toolbar-enhance",
        "title": "Toolbar Enhance",
        "icon": "./icon.svg",
        "main": "./dist/index.html"
    },
    "effect": true,
